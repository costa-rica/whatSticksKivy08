<TableScreen@Screen>
  BoxLayout:
    orientation:"vertical"
    Label:
      text:"Table SCreen"
    Button:
      text:"Button"

<NavMenu>
  spacing:10
  orientation:"vertical"
  canvas.before:
    Color:
      rgb: [127/255,160/255,189/255]
    Rectangle:
      pos: self.pos
      size: self.size
  OneLineListItem:
    text:"Add Activity"

    on_press:
      root.parent.parent.parent.child_sm.current="act_screen"

  OneLineListItem:

    text:"View Logged Activties"
    on_press:
      root.parent.parent.parent.child_sm.current="table_screen"
