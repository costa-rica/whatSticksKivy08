<ParentScreen1>
  name:"parent_screen_1"
  box_ps1:box_ps1
  anchor_app_name:anchor_app_name
  label_app_name:label_app_name
  anchor_email:anchor_email
  md_txt_field_email:md_txt_field_email
  anchor_password:anchor_password
  md_txt_field_password:md_txt_field_password
  show_password_toggle:show_password_toggle

  anchor_login:anchor_login
  btn_login:btn_login
  anchor_exit:anchor_exit
  btn_exit:btn_exit
  canvas.before:
    Color:
      rgb: [127/255,160/255,189/255]
    Rectangle:
      pos: self.pos
      size: self.size

  BoxLayout:#ParentScreen1 Box
    id:box_ps1
    orientation:"vertical"

    AnchorLayout:#App Name
      id:anchor_app_name
      anchor_x:"center"
      anchor_y:"bottom"
      size_hint:1,None
      height:root.ps1_base_height * .2

      Label:
        id: label_app_name
        text:"What Sticks"
        size_hint:None,None
        size:self.texture_size
        font_size:root.ps1_base_width * .1

    AnchorLayout:#App Email
      id:anchor_email
      anchor_x:"left"
      anchor_y:"bottom"
      size_hint:1,None
      height:root.ps1_base_height * .2
      padding:root.ps1_base_width * .06,0,root.ps1_base_width * .06,0

      MDTextField:
        id:md_txt_field_email
        hint_text:"Email"
        icon_right:"email"
        icon_right_color:.2,.2,.2,1
        current_hint_text_color:.2,.2,.2,1
        text_color:0,0,0,1
        font_size: root.ps1_base_width * .06

    AnchorLayout:#App Password
      id:anchor_password
      anchor_x:"left"
      anchor_y:"top"
      size_hint: 1,None
      height:root.ps1_base_height * .12
      padding:root.ps1_base_width * .06,0, root.ps1_base_width * .06,0
      # canvas.before:
      #   Color:
      #     rgb: [200/255,100/255,100/255]
      #   Rectangle:
      #     pos: self.pos
      #     size: self.size
      MDTextField:
        id:md_txt_field_password
        hint_text:"Password"
        password:True
        icon_right_color:.2,.2,.2,1
        current_hint_text_color:.2,.2,.2,1
        text_color:0,0,0,1
        font_size: root.ps1_base_width * .06


    AnchorLayout:
      anchor_x:"right"
      padding:0,0,root.ps1_base_width *.06,0
      size_hint:1,None
      height:show_password_toggle.height
      ShowPasswordToggle:
        id:show_password_toggle
        text:"Show password"
        font_size:root.ps1_base_width *.04
        on_press: root.show_password(self)


    AnchorLayout:
      id:anchor_login
      anchor_x:"right"
      padding: 0,0,root.ps1_base_width * .06, 0
      MDFillRoundFlatButton:
        id:btn_login
        size_hint:.5,.35
        font_size:root.ps1_base_width*.06
        text:'Submit'
        md_bg_color:.2,.2,.2,1
        on_press:
          #root.parent is BaseScreenManager
          # root.parent.ps1_base_width= root.ps1_base_width
          # root.parent.ps1_base_height= root.ps1_base_height
          # root.parent.email=root.md_txt_field_email.text
          root.verify_user()

    AnchorLayout:
      id:anchor_exit
      anchor_x:"right"
      anchor_y:"top"
      padding:0,0,root.ps1_base_width*.06,0
      MDFillRoundFlatButton:
        id:btn_exit
        text:'Exit'
        size_hint:.25,.35
        font_size:root.ps1_base_width*.06
        md_bg_color:.5,.5,.5,1
        on_press:
          app.stop()
