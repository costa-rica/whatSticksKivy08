    AnchorLayout:
      id:anchor_login
      anchor_x:"right"
      padding: 0,0,root.ps1_base_width * .06, 0
      MDFillRoundFlatButton:
        id:btn_login
        size_hint:.5,.35
        font_size:root.ps1_base_width*.06
        text:'Submit'
        md_bg_color:.2,.2,.2,1
        on_press:
          print('-START ps1 Submit button-')
          # app.mycontroller.ps1_base_height=root.ps1_base_height
          #BaseScreenManager
          root.parent.ps1_base_width= root.ps1_base_width
          root.parent.ps1_base_height= root.ps1_base_height
          root.parent.email=root.md_txt_field_email.text
          root.verify_user()
          print('root.parent:', root.parent)
          print('root.parent.ps1_base_width:',root.parent.ps1_base_width)
          print('root.parent.ps1_base_height:',root.parent.ps1_base_height)
          print('-END ps1 Submit button-')
          # print('acnhro_password:',root.anchor_password.height)

