  canvas.before:
    Color:
      rgb: [127/255,160/255,189/255]
    Rectangle:
      pos: self.pos
      size: self.size

  BoxLayout:#ParentScreen1 Box
    id:box_ps1
    orientation:"vertical"

    AnchorLayout:#App Name
      id:anchor_app_name
      anchor_x:"center"
      anchor_y:"bottom"
      size_hint:1,None
      height:root.ps1_base_height * .2

      Label:
        id: label_app_name
        text:"What Sticks"
        size_hint:None,None
        size:self.texture_size
        font_size:root.ps1_base_width * .1

    AnchorLayout:#App Email
      id:anchor_email
      anchor_x:"left"
      anchor_y:"bottom"
      size_hint:1,None
      height:root.ps1_base_height * .2
      padding:root.ps1_base_width * .06,0,root.ps1_base_width * .06,0

      MDTextField:
        id:md_txt_field_email
        hint_text:"Email"
        icon_right:"email"
        icon_right_color:.2,.2,.2,1
        current_hint_text_color:.2,.2,.2,1
        text_color:0,0,0,1
        font_size: root.ps1_base_width * .06

    AnchorLayout:#App Password
      id:anchor_password
      anchor_x:"left"
      anchor_y:"top"
      size_hint: 1,None
      height:root.ps1_base_height * .2
      padding:root.ps1_base_width * .06,0, root.ps1_base_width * .06,0
      # canvas.before:
      #   Color:
      #     rgb: [100/255,100/255,100/255]
      #   Rectangle:
      #     pos: self.pos
      #     size: self.size
      MDTextField:
        id:md_txt_field_password
        hint_text:"Password"
        password:True
        icon_right_color:.2,.2,.2,1
        current_hint_text_color:.2,.2,.2,1
        text_color:0,0,0,1
        font_size: root.ps1_base_width * .06

    BoxLayout:
      # canvas.before:
      #   Color:
      #     rgb: [100/255,100/255,100/255]
      #   Rectangle:
      #     pos: self.pos
      #     size: self.size
      size_hint:1,None
      height: label_show_password.height
      MDCheckbox:
        size_hint:.5,None
        height: label_show_password.height

      BoxLayout:
        size_hint:1,None
        height: label_show_password.height

        Label:
          id:label_show_password
          text:"Show password"
          size_hint:None,None
          size:self.texture_size
          font_size:root.ps1_base_width *.06

