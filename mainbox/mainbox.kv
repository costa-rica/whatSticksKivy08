<MainBoxLayout>
  act_screen_screen_name:act_screen_screen_name
  act_name_box:act_name_box
  act_note_box:act_note_box
  anchor_date_time:anchor_date_time
  box_sub_date_time:box_sub_date_time
  # anchor_submit:anchor_submit
  # extra_btn:extra_btn
  orientation:"vertical"

  BoxLayout:#TopPart of ActivityScreen
    id:screen_name_box
    size_hint:1,.4#x,y
    # canvas.before:
    #   Color:
    #     rgb: [127/255,160/255,100/255]#wshKivy Blue
    #   Rectangle:
    #     pos: self.pos
    #     size: self.size
    AnchorLayout:#Add Activity Screen Title Here
      anchor_x:"left"
      anchor_y:"top"
      # canvas.before:
      #   Color:
      #     rgb: [127/255,160/255,100/255]#wshKivy Blue
      #   Rectangle:
      #     pos: self.pos
      #     size: self.size
      AnchorLayoutScreenName:
        id:act_screen_screen_name
        padding:0,0,root.width*.01,0
        size_hint: 1,None
        height: self.email_label.height +root.height*.01
        # canvas.before:
        #   Color:
        #     rgb: [127/255,160/255,100/255]#wshKivy Blue
        #   Rectangle:
        #     pos: self.pos
        #     size: self.size

  BoxLayoutActName:#Add Activity Name InputBox Here
    id: act_name_box
    padding:root.width*.05,0,root.width*.05,0
    size_hint:1,None
    height:self.add_act_name_label.height +self.add_act_name.height+root.height*.08
    # canvas.before:
    #   Color:
    #     rgb: [127/255,160/255,100/255]#wshKivy Blue
    #   Rectangle:
    #     pos: self.pos
    #     size: self.size
  AnchorLayoutAddActNote:#Add Activity Note Stuff Here
    id:act_note_box
    padding:root.width*.05,0,root.width*.05,0
    size_hint:1,None
    height: self.add_act_note_label.height + self.add_act_note.gridlayout_text.height+root.height*.06
    anchor_y:"center"

  AnchorLayout:#Date and Time Boxes
    id:anchor_date_time
    padding:root.width*.05,0,root.width*.05,0
    BoxLayoutDateAndTime:
      id:box_sub_date_time

  AnchorLayout:#Activity Submit Button
    id:anchor_submit
    anchor_x:"right"
    anchor_y:"center"
    size_hint:1,None
    padding: 0,0,root.width * .06, 0
    height:root.height-(screen_name_box.height + act_name_box.height +act_note_box.height + anchor_date_time.height)
    MDFillRoundFlatButton:
      id:btn_login
      font_size:root.width*.06
      text:'Submit Activity'
      md_bg_color:.2,.2,.2,1
      on_press:
        root.submit_btn()



<BoxLayoutDateAndTime>:#Column 2 on Add Activity Top
  box_date:box_date
  date_label:date_label
  date_input:date_input
  box_time:box_time
  time_label:time_label
  time_input:time_input

  BoxLayout:
    id:box_date
    orientation:"vertical"
    Label:
      id:date_label
      text:"Date"
      size_hint:None,None
      size: self.texture_size
      font_size:root.width*.06
      color:.3,.3,.3,1
    TextInputAddDate:
      id:date_input
      rows:1
      size_hint:1,None
      font_size:root.width*.05
      height:self.line_height
      padding: (root.width*.01,0,0,0)
      halign:"left"
      text:root.date_str
  BoxLayout:
    id:box_time
    orientation:"vertical"

    Label:
      id:time_label
      text:"Time"
      size_hint:None,None
      size: self.texture_size
      font_size:root.width*.06
      color:.3,.3,.3,1
    TextInputAddTime:
      id:time_input
      rows:1
      size_hint:1,None
      font_size:root.width*.05
      height:self.line_height
      padding: (2,0,0,0)
      halign:"left"
      text: root.time_str

<CustomPopup>:
  size_hint:.4,.3
  AnchorLayout:
    Button:
      size_hint:.8,.4
      text:"OK"
      on_press:
        root.dismiss()


<AnchorLayoutScreenName>:#ScreenName
  # add_act_name_label:add_act_name_label
  email_label:email_label
  anchor_x:"right"
  # orientation:"vertical"
  #padding:(0,0,0,0)#left,top,right,bottom
  # Label:
  #   id:add_act_name_label
  #   size_hint:None,None
  #   size: self.texture_size
  #   font_size:root.width*.07
  #   text: 'Add Activity Window'
  Label:
    id:email_label
    size_hint:None,None
    size: self.texture_size
    color: .2,.2,.2,1
    font_size:root.width*.05
    text:root.email

<BoxLayoutActName@BoxLayout>:#Add Activity Name
  add_act_name_label:add_act_name_label
  add_act_name:add_act_name
  orientation:"vertical"
  Label:
    id:add_act_name_label
    size_hint:None,None
    size: self.texture_size
    font_size:root.width*.06
    color:.3,.3,.3,1
    text:"Add Activity Name"
  TextInputAddName:
    id:add_act_name
    rows:1
    size_hint:1,None
    font_size:root.width*.05
    height:self.font_size * 2

<AnchorLayoutAddActNote@AnchorLayout>:#Box with ActivityNote
  add_act_note_label:add_act_note_label
  add_act_note:add_act_note
  BoxLayout:
    orientation:"vertical"
    size_hint:1,None
    height: root.add_act_note_label.height+root.add_act_note.height
    Label:
      id:add_act_note_label
      text:"Activity Note"
      size_hint:None,None
      size: self.texture_size
      font_size: root.width*.06
      color:.3,.3,.3,1
    AnchorLayoutActNote:
      id:add_act_note
      size_hint:1,None
      height:self.gridlayout_text.height
      # canvas.before:
      #   Color:
      #     rgb: [127/255,160/255,100/255]#wshKivy Blue
      #   Rectangle:
      #     pos: self.pos
      #     # size: (self.size[0],100)
      #     size: self.size

<AnchorLayoutActNote@AnchorLayout>:#ActivityNote
  gridlayout_text:gridlayout_text
  txt_input_dy_act_note: txt_input_dy_act_note
  anchor_y:"top"

  GridLayout:
    id:gridlayout_text
    cols: 1
    size_hint:1,None
    height:txt_input_dy_act_note.height
    # canvas.before:
    #   Color:
    #     rgb: [127/255,160/255,1/255]#wshKivy Blue
    #   Rectangle:
    #     pos: self.pos
    #     size: self.size
    TextInputDynamicActNote:
      id: txt_input_dy_act_note
      font_size: root.width*.05
      size_hint_y: None
      height: (len(txt_input_dy_act_note._lines)+1) * txt_input_dy_act_note.line_height
